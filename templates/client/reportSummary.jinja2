{% macro render(name, type, badges, description) %}
    <div class="summary">
        <div class="content">
            <h1>{{ name }}</h1>

            <div class="summary-content">
                <div class="at-a-glance">
                    <h3>This {{ type }} At a Glance</h3>
                    <div class="badges">
                        {% for badge in badges %}
                            {{ FullBadge(badge=badge) }}
                        {% endfor %}
                    </div>
                </div>
                <div class="rentenna-review">
                    <div class="word-bubble">
                        {% for line in description %}
                            {% if line %}
                                <p>{{ line|safe }}</p>
                            {% endif %}
                        {% endfor %}
                        <button class="primary full-description">See Full Summary</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endmacro %}