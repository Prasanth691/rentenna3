{% extends config()['WEB']['BASE_ADMIN_TEMPLATE'] %}

{% block content %}
    <div class="container">
        <form class="form-signin little-form" method="POST">
            <h2 class="form-signin-heading">Change Password</h2>
            {% if error %}
                <div class="alert alert-danger">Sorry, that's wrong.</div>
            {% endif %}
            <input type="password" class="form-control" placeholder="Old Password" name="old" autofocus />
            <input type="password" class="form-control" placeholder="New Password" name="new"  />
            <button class="btn btn-lg btn-primary btn-block" type="submit">Save Changes</button>
        </form>
    </div>
{% endblock %}