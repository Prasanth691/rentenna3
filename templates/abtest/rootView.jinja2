{% import 'web-admin/form.jinja2' as form %}

{% extends config()['WEB']['BASE_ADMIN_TEMPLATE'] %}
{% block content %} 
    <div class="container client-root">
        <div class="col-md-6">
            <h1>SO GOOD AB TESTING</h1>
        </div>
        <div class="col-md-6">
            <h1>Experiments</h1>
            <a class="btn btn-primary" href="/web-admin/abtest/experiments/new/">
                Start a New Experiment
            </a>
            {% for experiment in experiments %}
                <div class="experiment">
                    <a href="{{ experiment.getUrl() }}">
                        {{ experiment.name }} ({{ experiment.status }})
                    </a>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}